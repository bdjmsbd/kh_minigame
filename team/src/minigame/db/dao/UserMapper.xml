<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="minigame.db.dao.UserDAO">
	<select id="ExistLogin" resultType = "UserVO">
		select *
		from user
		where us_id=#{id};
	</select>
	<select id="LoginUser" resultType = "UserVO">
		select *
		from user
		where us_id=#{id} and us_pw=#{pw};
	</select>
	<select id="findPassWord" resultType = "String">
		select pw
		from user
		where us_id = #{id} and us_email =#{email};
	</select>
	<insert id="JoinMembership">
	insert into(us_id,us_email,us_pw)
	values(#{us.us_id},#{us.us_email},#{us.us_pw})
	</insert>
</mapper>